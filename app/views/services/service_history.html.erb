<%= render  'shared/admin_navbar' %>
<table class="table table-striped table-md">
  <thead class="bg-primary text-center">
    <tr>
      <th scope="col">Owner_ name</th>
      <th scope="col">Email</th>
      <th scope="col">Contact</th>
      <th scope="col">Car_name</th>
      <th scope="col">Car_number</th>
      <th scope="col">Model</th>
      <th scope="col">Date</th>
      <th scope="col">Issue</th>
      <th scope="col">service_name</th>
      <th scope="col">Description</th>
      <th scope="col">Duration</th>
      <th scope="col">Mechanic</th>
      <th scope="col">Status</th>
      <th scope="col">Cancel</th>
      <th scope="col">confrim</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings_service.each do |b| %>
      <tr class="align-bottom">
        <td><%= b.user.name %></td>
        <td><%= b.user.email%></td>
        <td><%= b.user.contact%></td>
        <td><%= b.car.name%></td>
        <td><%= b.car.number%></td>
        <td><%= b.car.model%></td>
        <td><%= b.date%></td>
        <td><%= b.issue %></td>
        <td><%= b.service.details.dig("name")%></td>
        <td><%= b.service.details.dig("description")%></td>
        <td><%= b.service.details.dig("duration")%></td>
        <td><%= b.mechanic.name%></td>
        <td><%= b.service.status %></td>
        <td><%= link_to 'Cancel', cancel_service_path(id: b.service.id) %></td>
        <td><%= link_to 'confirm', confirm_service_path(id: b.service.id)%></td>
        <td><%= button_to 'Remove', admin_path(id: b.id), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
