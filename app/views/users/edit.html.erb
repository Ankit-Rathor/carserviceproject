<%= render'/shared/dash_board' %>
<div class="container" align="center">
<% binding.pry %>
  <%= form_for @user, url: {action: :update} do |f| %>
     <h3> Update Data </h3>   
    <div>   
      <label>User Name</label>   
      <%= f.text_field :name %>   
    </div> <br>  
    <div>   
      <label>Email</label>   
      <%= f.text_field :email %>   
    </div><br>  
     <div>   
      <label>Password</label>   
      <%= f.password_field :password %>   
    </div><br>  
     <div>   
      <label>Contact</label>   
      <%= f.text_field :contact %>   
    </div><br>  
     <div>   
      <label>Role</label>   
      <%= f.text_field :role %>   
    </div> <br>        
    <div>   
      <%= f.submit 'Update user' %>   
    </div>   
  <% end %>   
</div>  
