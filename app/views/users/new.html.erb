<div class="container">   
  <%= form_for @user, url: {action: :create} do |f| %>   
  <div>     
    <div>   
      <label>user Name</label>   
      <%= f.text_field :name %>   
    </div>     
    <div>   
      <label>Email</label>   
      <%= f.text_field :email %>   
    </div>
    <div>   
      <label>Password</label>   
      <%= f.password_field :password %>       
    </div> 
    <div>   
      <label>Contact</label>   
      <%= f.text_field :contact %>   
    </div>
    <div>   
    <%= f.label  :Role %>
    <%= f.select :role, ["customer", "manager", "mechanic"] %> 
    </div>  
  </div>   
    <div>   
      <%= f.submit 'Create user',{ controller: 'users', action: 'index'} %>     
    </div>   
  <% end %>   
</div>  