<div class="container">   
  <%= form_for @user, url: {action: :create} do |f| %>  
  <div>     
    <div>   
      <label>user Name</label>   
      <%= f.text_field :name %>   
    </div>     
    <div>   
      <label>Email</label>   
      <%= f.text_field :email %>   
    </div>
    <div>   
      <label>Password</label>   
      <%= f.password_field :password %>       
    </div> 
    <div>   
      <label>Contact</label>   
      <%= f.text_field :contact %>   
    </div>
      
  <%= f.fields_for :address do |a| %>
    <div>   
      <label>City</label>   
      <%= a.text_field :city %>   
    </div>
    <div>   
      <label>Location</label>   
      <%= a.text_field :location %>   
    </div>
    <div>   
      <label>House_no</label>   
      <%= a.text_field :house_no %>        
    </div>     
  <% end %>   
    </div>  

    <div>   
      <%= f.label  :Role %>
      <%= f.select :role, ["customer","admin","mechanic"] %> 
    </div>  
    </div>   
    <div>  
      <%= f.submit 'Create user',{ controller: 'users', action: 'index'} %>     
    </div>   
  <% end %>   
